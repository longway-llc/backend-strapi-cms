{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": [
        "open",
        "inProgress",
        "paid",
        "closed"
      ],
      "default": "open"
    },
    "saleProductData": {
      "type": "component",
      "repeatable": true,
      "component": "sale-product-data.sale-product-data"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "orders"
    },
    "invoice": {
      "type": "string",
      "unique": true
    },
    "requestedShippingDate": {
      "type": "date"
    },
    "deliveryInstruction": {
      "type": "text"
    },
    "poNumber": {
      "type": "string"
    }
  }
}
